# ===========================================
# BlacklistMC Docker Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Database (Docker internal)
POSTGRES_USER=blacklistmc
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=blacklistmc

# App port (optional, defaults to 3000)
APP_PORT=3000

# Auth - Discord OAuth
NEXT_PUBLIC_AUTH_DISCORD_ID=your_discord_client_id
AUTH_DISCORD_SECRET=your_discord_client_secret
NEXT_PUBLIC_AUTH_DISCORD_REDIRECT_URI=http://localhost:3000/callback/discord
JWT_SECRET=your_very_long_and_secure_jwt_secret_key

# API
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_STORAGE_CONTAINER_NAME=data
AZURE_STORAGE_ACCOUNT_NAME=your_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_account_key

# Discord Bot
DISCORD_TOKEN=your_discord_bot_token
DISCORD_API_URL=https://discord.com/api/v10
